                <h1>Đăng nhập</h1>
                
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "validation-summary-errors" })
                    
                    <div class="form-group">
                        @Html.LabelFor(m => m.Username)
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Nhập tên đăng nhập hoặc email" })
                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "field-validation-error" })
                    </div>
                    
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Nhập mật khẩu" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "field-validation-error" })
                    </div>
                    
                    <div class="form-check">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe)
                    </div>
                    
                    <button type="submit" class="auth-btn">
                        <i class="fas fa-sign-in-alt"></i> Đăng nhập
                    </button>
                    
                    <div class="auth-links">
                        <p>Chưa có tài khoản? <a href="@Url.Action("Register", "Account")">Đăng ký ngay</a></p>
                        <p><a href="@Url.Action("Index", "Home")"><i class="fas fa-home"></i> Quay về trang chủ</a></p>
                    </div>
