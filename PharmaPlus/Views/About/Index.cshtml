@model PharmaPlus.Controllers.AboutViewModel
@{
    ViewBag.Title = "Về PharmaPlus - Nhà thuốc trực tuyến tin cậy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    <link rel="stylesheet" href="~/Content/css/about-style.css" />
    <link rel="stylesheet" href="https://unpkg.com/aos@2.3.1/dist/aos.css" />
}

<!-- Hero Section -->
<section class="about-hero" id="hero">
    <div class="hero-background">
        <div class="floating-shapes">
            <div class="shape shape-1"></div>
            <div class="shape shape-2"></div>
            <div class="shape shape-3"></div>
            <div class="shape shape-4"></div>
            <div class="shape shape-5"></div>
        </div>
    </div>
    <div class="container">
        <div class="hero-content" data-aos="fade-up" data-aos-duration="800">
            <h1 class="hero-title">
                <span class="title-line">Về</span>
                <span class="title-highlight">PharmaPlus</span>
            </h1>
            <p class="hero-subtitle">
                15 năm đồng hành cùng sức khỏe của bạn
            </p>
            <div class="hero-description">
                <p>Chúng tôi là đơn vị tiên phong trong việc ứng dụng công nghệ vào ngành dược phẩm, 
                mang đến dịch vụ chăm sóc sức khỏe toàn diện, chuyên nghiệp và đáng tin cậy.</p>
            </div>
            <div class="hero-buttons">
                <a href="#team" class="btn btn-primary btn-large">
                    <i class="fas fa-users"></i>
                    Đội ngũ của chúng tôi
                </a>
                <a href="#mission" class="btn btn-outline btn-large">
                    <i class="fas fa-heart"></i>
                    Sứ mệnh
