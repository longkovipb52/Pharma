@model PharmaPlus.Models.RegisterViewModel
@{
    ViewBag.Title = "Đăng ký - PharmaPlus";
    Layout = null;
    Response.ContentEncoding = System.Text.Encoding.UTF8;
    Response.Charset = "utf-8";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/css/auth-style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="auth-page">
    <!-- Floating Pills Animation -->
    <div class="floating-pills">
        <div class="pill"></div>
        <div class="pill"></div>
        <div class="pill"></div>
        <div class="pill"></div>
    </div>

    <div class="auth-container">
        <div class="auth-image">
            <div class="auth-image-overlay">
                <div class="auth-image-content">
                    <div class="brand">
                        <i class="fas fa-pills"></i>
                        <span>PharmaPlus</span>
                    </div>
                    <h2>Tạo tài khoản</h2>
                    <p>Tham gia cùng PharmaPlus để nhận nhiều ưu đãi và dễ dàng quản lý sức khỏe của bạn.</p>
                    <p>Đã có tài khoản? <a href="@Url.Action("Login", "Account")">Đăng nhập</a>.</p>
                </div>
            </div>
        </div>
        
        <div class="auth-form">
            <h1>Đăng ký tài khoản</h1>
            <p class="subtitle">Điền thông tin để bắt đầu</p>
            
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "register-form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "validation-summary-errors" })
                
                <div class="form-group">
                    @Html.LabelFor(m => m.Username, "Tên đăng nhập")
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @placeholder = "Nhập tên đăng nhập" })
                    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "field-validation-error" })
                </div>
                
                <div class="form-group">
                    @Html.LabelFor(m => m.FullName, "Họ và tên")
                    @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", @placeholder = "Nhập họ và tên" })
                    @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "field-validation-error" })
                </div>
                
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, "Email")
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Nhập email", @type = "email" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "field-validation-error" })
                </div>
                
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, "Mật khẩu")
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Nhập mật khẩu" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "field-validation-error" })
                </div>
                
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, "Xác nhận mật khẩu")
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Xác nhận mật khẩu" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "field-validation-error" })
                </div>
                
                <button type="submit" class="auth-btn">
                    <i class="fas fa-user-plus"></i>
                    Đăng ký
                </button>
                
                <div class="auth-links">
                    <p>Đã có tài khoản? <a href="@Url.Action("Login", "Account")">Đăng nhập</a></p>
                    <a href="@Url.Action("Index", "Home")" class="back-home">
                        <i class="fas fa-home"></i>
                        Quay về trang chủ
                    </a>
                </div>
            }
        </div>
    </div>

    <script>
        // Enhanced form interactions
        document.addEventListener('DOMContentLoaded', function() {
            const inputs = document.querySelectorAll('.form-control');
            const submitBtn = document.querySelector('.auth-btn');
            
            inputs.forEach(input => {
                input.addEventListener('focus', function() {
                    this.parentElement.classList.add('focused');
                });
                
                input.addEventListener('blur', function() {
                    if (!this.value) {
                        this.parentElement.classList.remove('focused');
                    }
                });
            });
            
            // Loading state on form submit
            document.querySelector('.register-form').addEventListener('submit', function() {
                submitBtn.classList.add('loading');
                submitBtn.disabled = true;
            });
        });
    </script>
</body>
</html>