@model PharmaPlus.Models.AdminProfileViewModel
@{
    ViewBag.Title = "Hồ sơ cá nhân";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    Response.ContentEncoding = System.Text.Encoding.UTF8;
    Response.Charset = "utf-8";
}

<div class="admin-profile-page">
    <div class="card">
        <div class="card-header">
            <h5 class="card-title">
                <i class="fas fa-user"></i> Hồ sơ cá nhân
            </h5>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Profile", "Admin", FormMethod.Post, new { @class = "admin-profile-form" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.Username)
                @Html.HiddenFor(model => model.Role)
                @Html.HiddenFor(model => model.CreatedAt)

                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            <div class="profile-info">
                                <div class="profile-label">@Html.DisplayNameFor(m => m.Username):</div>
                                <div class="profile-value">@Model.Username</div>
                            </div>

                            <div class="profile-info">
                                <div class="profile-label">@Html.DisplayNameFor(m => m.Role):</div>
                                <div class="profile-value">@(Model.Role == "admin" ? "Quản trị viên" : Model.Role)</div>
                            </div>

                            <div class="profile-info">
                                <div class="profile-label">@Html.DisplayNameFor(m => m.CreatedAt):</div>
                                <div class="profile-value">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
                            </div>
                            
                            <hr class="mt-4 mb-4" />
                            
                            <div class="form-group">
                                @Html.LabelFor(m => m.FullName, new { @class = "control-label" })
                                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                            
                            <div class="form-group mt-4">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save"></i> Lưu thay đổi
                                </button>
                                
                                <a href="@Url.Action("ChangePassword")" class="btn btn-outline-secondary">
                                    <i class="fas fa-key"></i> Đổi mật khẩu
                                </a>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="profile-avatar">
                            <div class="avatar-image">
                                <i class="fas fa-user-circle"></i>
                            </div>
                            <div class="avatar-name">@Model.FullName</div>
                            <div class="avatar-role">@(Model.Role == "admin" ? "Quản trị viên" : Model.Role)</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section styles {
    <style>
        .admin-profile-page {
            max-width: 900px;
            margin: 0 auto;
        }
        
        .card-title {
            color: #4e73df;
            margin-bottom: 0;
        }
        
        .card-title i {
            margin-right: 10px;
        }
        
        .profile-info {
            display: flex;
            margin-bottom: 15px;
        }
        
        .profile-label {
            width: 150px;
            font-weight: bold;
            color: #5a5c69;
        }
        
        .profile-value {
            flex: 1;
        }
        
        .profile-avatar {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px;
            background-color: #f8f9fc;
            border-radius: 5px;
            margin-top: 20px;
        }
        
        .avatar-image {
            font-size: 100px;
            color: #4e73df;
            margin-bottom: 15px;
        }
        
        .avatar-name {
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 5px;
        }
        
        .avatar-role {
            font-size: 14px;
            color: #858796;
        }
        
        .form-group {
            margin-bottom: 20px;
        }
        
        .control-label {
            font-weight: 600;
            margin-bottom: 8px;
            display: block;
        }
    </style>
}

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}