@model PharmaPlus.Models.CategoryDetailsViewModel
@{
    ViewBag.Title = "Chi tiết danh mục";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    Response.ContentEncoding = System.Text.Encoding.UTF8;
    Response.Charset = "utf-8";
}

<div class="admin-category-details">
    <div class="back-link">
        <a href="@Url.Action("Index")" class="btn btn-link">
            <i class="fas fa-arrow-left"></i> Quay lại danh sách
        </a>
    </div>
    
    <div class="card">
        <div class="card-header d-flex justify-content-between">
            <h1 class="card-title">Chi tiết danh mục</h1>
            <div class="header-actions">
                <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Chỉnh sửa
                </a>
                <a href="@Url.Action("Delete", new { id = Model.Id })" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Xóa
                </a>
            </div>
        </div>
        
        <div class="card-body">
            <div class="category-info">
                <div class="info-item">
                    <span class="info-label">Tên danh mục:</span>
                    <span class="info-value">@Model.Name</span>
                </div>
                
                <div class="info-item">
                    <span class="info-label">Mô tả:</span>
                    <div class="info-value description">
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            @Model.Description
                        }
                        else
                        {
                            <span class="text-muted">Không có mô tả</span>
                        }
                    </div>
                </div>
                
                <div class="info-item">
                    <span class="info-label">Số lượng sản phẩm:</span>
                    <span class="info-value badge bg-primary">@Model.ProductCount</span>
                </div>
            </div>
            
            <h4 class="section-title mt-4">Sản phẩm trong danh mục</h4>
            
            @if (Model.Products != null && Model.Products.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Ảnh</th>
                                <th>Tên sản phẩm</th>
                                <th>Giá</th>
                                <th>Tồn kho</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model.Products)
                            {
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrEmpty(product.ImageUrl))
                                        {
                                            <img src="@Url.Content("~/images/products/" + product.ImageUrl)" alt="@product.Name" class="product-thumbnail" />
                                        }
                                        else
                                        {
                                            <div class="no-image"><i class="fas fa-image"></i></div>
                                        }
                                    </td>
                                    <td>@product.Name</td>
                                    <td>@string.Format("{0:#,##0} VNĐ", product.Price)</td>
                                    <td>
                                        @if (product.Stock == 0)
                                        {
                                            <span class="badge bg-danger">Hết hàng</span>
                                        }
                                        else if (product.Stock <= 10)
                                        {
                                            <span class="badge bg-warning">@product.Stock</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">@product.Stock</span>
                                        }
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Details", "AdminProducts", new { id = product.Id })" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", "AdminProducts", new { id = product.Id })" class="btn btn-sm btn-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="empty-state">
                    <i class="fas fa-box-open"></i>
                    <p>Không có sản phẩm nào trong danh mục này</p>
                </div>
            }
        </div>
    </div>
</div>

@section styles {
    <style>
        .admin-category-details {
            max-width: 1200px;
            margin: 0 auto;
        }
        
        .back-link {
            margin-bottom: 15px;
        }
        
        .card-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .header-actions .btn {
            margin-left: 10px;
        }
        
        .category-info {
            background-color: #f9f9f9;
            border-radius: 5px;
            padding: 20px;
            margin-bottom: 20px;
        }
        
        .info-item {
            margin-bottom: 15px;
        }
        
        .info-item:last-child {
            margin-bottom: 0;
        }
        
        .info-label {
            font-weight: 600;
            display: inline-block;
            width: 150px;
        }
        
        .info-value {
            display: inline-block;
        }
        
        .info-value.description {
            margin-top: 10px;
            white-space: pre-wrap;
        }
        
        .section-title {
            margin-bottom: 20px;
            font-weight: 600;
        }
        
        .product-thumbnail {
            width: 60px;
            height: 60px;
            object-fit: cover;
            border-radius: 4px;
        }
        
        .no-image {
            width: 60px;
            height: 60px;
            background-color: #f5f5f5;
            border-radius: 4px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #aaa;
        }
        
        .empty-state {
            text-align: center;
            padding: 40px 0;
            background-color: #f9f9f9;
            border-radius: 5px;
            color: #aaa;
        }
        
        .empty-state i {
            font-size: 3rem;
            margin-bottom: 15px;
        }
    </style>
}