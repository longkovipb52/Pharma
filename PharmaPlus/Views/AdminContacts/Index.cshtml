@model IEnumerable<PharmaPlus.Models.AdminContactViewModel>
@{
    ViewBag.Title = "Quản lý liên hệ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    Response.ContentEncoding = System.Text.Encoding.UTF8;
    Response.Charset = "utf-8";
    var filter = ViewBag.Filter as PharmaPlus.Models.AdminContactFilterViewModel;
}

<div class="admin-contacts">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="page-title">
            <i class="fas fa-envelope"></i> Quản lý liên hệ
        </h1>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="card-title mb-0">
                <i class="fas fa-filter"></i> Bộ lọc
            </h5>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Index", "AdminContacts", FormMethod.Get))
            {
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label>Tìm kiếm (tên, email, tiêu đề, nội dung)</label>
                        <input type="text" name="searchTerm" class="form-control" placeholder="Nhập từ khóa..." value="@filter.SearchTerm" />
                    </div>
                    
                    <div class="col-md-3 mb-3">
                        <label>Trạng thái</label>
                        @Html.DropDownList("status", filter.StatusOptions, new { @class = "form-control" })
                    </div>
                    
                    <div class="col-md-2 mb-3">
                        <label>Từ ngày</label>
                        <input type="date" name="fromDate" class="form-control" value="@(filter.FromDate.HasValue ? filter.FromDate.Value.ToString("yyyy-MM-dd") : "")" />
                    </div>
                    
                    <div class="col-md-2 mb-3">
                        <label>Đến ngày</label>
                        <input type="date" name="toDate" class="form-control" value="@(filter.ToDate.HasValue ? filter.ToDate.Value.ToString("yyyy-MM-dd") : "")" />
                    </div>
                    
                    <div class="col-md-1 mb-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="fas fa-search"></i>
                        </button>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="fas fa-redo"></i>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Người gửi</th>
                            <th>Tiêu đề</th>
                            <th>Ngày gửi</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var contact in Model)
                            {
                                <tr>
                                    <td>@contact.Id</td>
                                    <td>
                                        <div><strong>@contact.Name</strong></div>
                                        <div class="text-muted small">@contact.Email</div>
                                        @if (contact.UserId.HasValue)
                                        {
                                            <div class="text-muted small">
                                                <a href="@Url.Action("Details", "AdminUsers", new { id = contact.UserId })">
                                                    <i class="fas fa-user"></i> Xem người dùng
                                                </a>
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        <div class="subject-ellipsis">@contact.Subject</div>
                                        <div class="message-preview text-muted small">
                                            @(contact.Message.Length > 50 ? contact.Message.Substring(0, 50) + "..." : contact.Message)
                                        </div>
                                    </td>
                                    <td>@contact.FormattedCreatedAt</td>
                                    <td><span class="@contact.StatusClass">@contact.Status</span></td>
                                    <td>
                                        <div class="btn-group">
                                            <a href="@Url.Action("Details", new { id = contact.Id })" class="btn btn-info btn-sm" title="Xem chi tiết">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="@Url.Action("Edit", new { id = contact.Id })" class="btn btn-primary btn-sm" title="Phản hồi">
                                                <i class="fas fa-reply"></i>
                                            </a>
                                            <a href="@Url.Action("Delete", new { id = contact.Id })" class="btn btn-danger btn-sm" title="Xóa">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center">Không tìm thấy liên hệ nào</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section styles {
    <style>
        .admin-contacts {
            max-width: 1200px;
            margin: 0 auto;
        }
        
        .page-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: #4e73df;
            margin-bottom: 0;
        }
        
        .page-title i {
            margin-right: 10px;
        }
        
        .badge {
            padding: 0.25em 0.6em;
            font-size: 75%;
        }
        
        .bg-success {
            background-color: #1cc88a !important;
            color: white;
        }
        
        .bg-primary {
            background-color: #4e73df !important;
            color: white;
        }
        
        .bg-warning {
            background-color: #f6c23e !important;
            color: #212529;
        }
        
        .bg-secondary {
            background-color: #858796 !important;
            color: white;
        }
        
        .subject-ellipsis {
            max-width: 300px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        
        .message-preview {
            max-width: 300px;
            overflow: hidden;
            text-overflow: ellipsis;
            display: -webkit-box;
            -webkit-line-clamp: 1;
            -webkit-box-orient: vertical;
        }
        
        .btn-group .btn {
            margin: 0 2px;
        }
    </style>
}

@section scripts {
    <script>
        $(document).ready(function() {
            console.log("Contact admin page initialized");
            
            // Highlight rows on hover
            $('.table-hover tr').hover(
                function() { $(this).addClass('bg-light'); },
                function() { $(this).removeClass('bg-light'); }
            );
        });
    </script>
}