@model IEnumerable<PharmaPlus.Models.AdminOrderViewModel>
@{
    ViewBag.Title = "Quản lý đơn hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    Response.ContentEncoding = System.Text.Encoding.UTF8;
    Response.Charset = "utf-8";
    
    var filter = ViewBag.Filter as PharmaPlus.Models.AdminOrderFilterViewModel;
}

<div class="admin-orders-page">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="page-title">
            <i class="fas fa-shopping-cart"></i> Quản lý đơn hàng
        </h1>
    </div>
    
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="card-title mb-0">
                <i class="fas fa-filter"></i> Bộ lọc
            </h5>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Index", "AdminOrders", FormMethod.Get))
            {
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <label>Trạng thái đơn hàng</label>
                        <select name="status" class="form-control">
                            <option value="">Tất cả trạng thái</option>
                            @foreach (var status in PharmaPlus.Models.AdminOrderUpdateViewModel.AvailableStatuses)
                            {
                                <option value="@status" @(filter != null && filter.Status == status ? "selected" : "")>@status</option>
                            }
                        </select>
                    </div>
                    
                    <div class="col-md-3 mb-3">
                        <label>Từ ngày</label>
                        <input type="date" name="fromDate" class="form-control" value="@(filter != null && filter.FromDate.HasValue ? filter.FromDate.Value.ToString("yyyy-MM-dd") : "")" />
                    </div>
                    
                    <div class="col-md-3 mb-3">
                        <label>Đến ngày</label>
                        <input type="date" name="toDate" class="form-control" value="@(filter != null && filter.ToDate.HasValue ? filter.ToDate.Value.ToString("yyyy-MM-dd") : "")" />
                    </div>
                    
                    <div class="col-md-3 mb-3">
                        <label>Tìm kiếm (SĐT, tên, mã đơn)</label>
                        <input type="text" name="searchTerm" class="form-control" placeholder="Nhập từ khóa..." value="@(filter != null ? filter.SearchTerm : "")" />
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <label>Trạng thái thanh toán</label>
                        <select name="paymentStatus" class="form-control">
                            <option value="">Tất cả</option>
                            <option value="paid" @(filter != null && filter.PaymentStatus == "paid" ? "selected" : "")>Đã thanh toán</option>
                            <option value="unpaid" @(filter != null && filter.PaymentStatus == "unpaid" ? "selected" : "")>Chưa thanh toán</option>
                        </select>
                    </div>
                    
                    <div class="col-md-9 mb-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="fas fa-search"></i> Lọc
                        </button>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="fas fa-redo"></i> Đặt lại
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
    
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Mã đơn</th>
                            <th>Ngày đặt</th>
                            <th>Khách hàng</th>
                            <th>Người nhận</th>
                            <th>Tổng tiền</th>
                            <th>Thanh toán</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var order in Model)
                            {
                                <tr>
                                    <td>#@order.Id</td>
                                    <td>@order.FormattedCreatedAt</td>
                                    <td>@order.CustomerName</td>
                                    <td>
                                        @order.RecipientName<br />
                                        <small class="text-muted">@order.RecipientPhone</small>
                                    </td>
                                    <td>@order.FormattedTotalPrice</td>
                                    <td>
                                        @if (order.IsPaid)
                                        {
                                            <span class="badge bg-success">Đã thanh toán</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">Chưa thanh toán</span>
                                        }
                                        <div>@order.PaymentMethod</div>
                                    </td>
                                    <td>
                                        <span class="@order.StatusClass">@order.Status</span>
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <a href="@Url.Action("Details", new { id = order.Id })" class="btn btn-info btn-sm">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="@Url.Action("Edit", new { id = order.Id })" class="btn btn-primary btn-sm">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center">Không tìm thấy đơn hàng nào</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section styles {
    <style>
        .admin-orders-page {
            max-width: 1200px;
            margin: 0 auto;
        }
        
        .page-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--dark);
            margin-bottom: 0;
        }
        
        .page-title i {
            color: var(--primary);
            margin-right: 10px;
        }
        
        .badge {
            padding: 0.25em 0.6em;
            font-size: 0.75rem;
            font-weight: 700;
            border-radius: 0.35rem;
        }
        
        .btn-group .btn {
            margin: 0 2px;
        }
    </style>
}