@model PharmaPlus.Models.OrderConfirmationViewModel
@{
    ViewBag.Title = "Đặt hàng thành công - PharmaPlus";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Response.ContentEncoding = System.Text.Encoding.UTF8;
    Response.Charset = "utf-8";
}

<div class="order-success-wrapper">
    <div class="order-success-container">
        <div class="order-success-header">
            <div class="success-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <h1 class="success-title">Đặt hàng thành công!</h1>
            <p class="success-message">Cảm ơn bạn đã đặt hàng tại PharmaPlus. Đơn hàng của bạn đã được xác nhận.</p>
        </div>
        
        <div class="order-details-card">
            <div class="order-details-header">
                <h2>Thông tin đơn hàng #@Model.OrderId</h2>
                <span class="order-status">@Model.OrderStatus</span>
            </div>
            
            <div class="order-info-section">
                <div class="order-info-column">
                    <div class="order-info-group">
                        <h3><i class="fas fa-user"></i> Thông tin nhận hàng</h3>
                        <p><strong>Người nhận:</strong> @Model.RecipientName</p>
                        <p><strong>Số điện thoại:</strong> @Model.RecipientPhone</p>
                        <p><strong>Địa chỉ:</strong> @Model.ShippingAddress</p>
                    </div>
                </div>
                
                <div class="order-info-column">
                    <div class="order-info-group">
                        <h3><i class="fas fa-credit-card"></i> Thông tin thanh toán</h3>
                        <p><strong>Phương thức:</strong> @Model.PaymentMethod</p>
                        <p><strong>Trạng thái:</strong> <span class="payment-status @Model.PaymentStatusCssClass">@Model.PaymentStatus</span></p>
                        <p><strong>Tổng tiền:</strong> @Model.FormattedTotalAmount</p>
                    </div>
                </div>
                
                <div class="order-info-column">
                    <div class="order-info-group">
                        <h3><i class="fas fa-info-circle"></i> Thông tin khác</h3>
                        <p><strong>Mã đơn hàng:</strong> #@Model.OrderId</p>
                        <p><strong>Ngày đặt:</strong> @Model.FormattedOrderDate</p>
                        <p><strong>Trạng thái đơn hàng:</strong> @Model.OrderStatus</p>
                    </div>
                </div>
            </div>
            
            <div class="order-items-section">
                <h3>Danh sách sản phẩm</h3>
                @if (Model.OrderItems.Any())
                {
                    <div class="order-items-list">
                        @foreach (var item in Model.OrderItems)
                        {
                            <div class="order-item">
                                <div class="order-item-image">
                                    <img src="@item.ImageUrl" alt="@item.ProductName" />
                                </div>
                                <div class="order-item-details">
                                    <div class="order-item-name">@item.ProductName</div>
                                    <div class="order-item-price">@item.FormattedPrice x @item.Quantity</div>
                                </div>
                                <div class="order-item-subtotal">@item.FormattedSubTotal</div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="no-items-message">
                        <p>Đơn hàng đã được xử lý thành công. Chi tiết sản phẩm sẽ được cập nhật sau.</p>
                    </div>
                }
            </div>
            
            <div class="order-success-actions">
                <a href="@Url.Action("Index", "Products")" class="btn-continue-shopping">
                    <i class="fas fa-shopping-bag"></i>
                    Tiếp tục mua sắm
                </a>
                
                <a href="@Url.Action("Detail", "OrderHistory", new { id = Model.OrderId })" class="btn-track-order">
                    <i class="fas fa-truck"></i>
                    Xem chi tiết đơn hàng
                </a>
            </div>
        </div>
    </div>
</div>

@section styles {
    <link href="~/Content/css/checkout-style.css" rel="stylesheet" />
    <style>
        /* Thêm style cho trang success */
        .order-success-wrapper {
            padding: 50px 0;
            background-color: #f5f7fa;
            min-height: calc(100vh - 200px);
        }
        
        .order-success-container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 0 20px;
        }
        
        .order-success-header {
            text-align: center;
            margin-bottom: 30px;
        }
        
        .success-icon {
            font-size: 60px;
            color: #10b981;
            margin-bottom: 20px;
        }
        
        .success-title {
            font-size: 28px;
            font-weight: 700;
            color: #111827;
            margin-bottom: 15px;
        }
        
        .success-message {
            font-size: 16px;
            color: #6b7280;
            max-width: 600px;
            margin: 0 auto;
        }
        
        .order-details-card {
            background: white;
            border-radius: 16px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.05);
            padding: 30px;
        }
        
        .order-details-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
            padding-bottom: 15px;
            border-bottom: 1px solid #e5e7eb;
        }
        
        .order-details-header h2 {
            font-size: 20px;
            font-weight: 700;
            color: #111827;
        }
        
        .order-status {
            background: #10b981;
            color: white;
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 14px;
            font-weight: 500;
        }
        
        .order-info-section {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        
        .order-info-group {
            padding: 20px;
            background: #f9fafb;
            border-radius: 10px;
            height: 100%;
        }
        
        .order-info-group h3 {
            font-size: 16px;
            font-weight: 600;
            color: #111827;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 8px;
        }
        
        .order-info-group p {
            margin-bottom: 8px;
            color: #4b5563;
            font-size: 14px;
            line-height: 1.5;
        }
        
        .payment-status {
            font-weight: 500;
            padding: 2px 8px;
            border-radius: 4px;
            font-size: 12px;
        }
        
        .payment-status.paid {
            color: #10b981;
            background-color: #d1fae5;
        }
        
        .payment-status.pending {
            color: #f59e0b;
            background-color: #fef3c7;
        }
        
        .payment-status.cod {
            color: #6366f1;
            background-color: #e0e7ff;
        }
        
        .order-items-section {
            margin-top: 30px;
        }
        
        .order-items-section h3 {
            font-size: 18px;
            font-weight: 600;
            color: #111827;
            margin-bottom: 20px;
        }
        
        .order-items-list {
            border: 1px solid #e5e7eb;
            border-radius: 10px;
            overflow: hidden;
        }
        
        .order-item {
            display: flex;
            align-items: center;
            padding: 15px;
            border-bottom: 1px solid #e5e7eb;
        }
        
        .order-item:last-child {
            border-bottom: none;
        }
        
        .order-item-image {
            width: 60px;
            height: 60px;
            border-radius: 8px;
            overflow: hidden;
            margin-right: 15px;
            flex-shrink: 0;
        }
        
        .order-item-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        
        .order-item-details {
            flex: 1;
        }
        
        .order-item-name {
            font-weight: 500;
            color: #111827;
            margin-bottom: 5px;
        }
        
        .order-item-price {
            font-size: 14px;
            color: #6b7280;
        }
        
        .order-item-subtotal {
            font-weight: 600;
            color: #111827;
        }
        
        .order-success-actions {
            margin-top: 30px;
            display: flex;
            gap: 15px;
            justify-content: center;
        }
        
        .btn-continue-shopping, .btn-track-order {
            padding: 12px 24px;
            border-radius: 8px;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s;
        }
        
        .btn-continue-shopping {
            background-color: #3b82f6;
            color: white;
        }
        
        .btn-track-order {
            background-color: #f3f4f6;
            color: #1f2937;
            border: 1px solid #e5e7eb;
        }
        
        .btn-continue-shopping:hover {
            background-color: #2563eb;
        }
        
        .btn-track-order:hover {
            background-color: #e5e7eb;
        }
        
        @@media (max-width: 768px) {
            .order-info-section {
                grid-template-columns: 1fr;
            }
            
            .order-success-actions {
                flex-direction: column;
            }
        }
    </style>
}

@section scripts {
    <script>
        // Kiểm tra đơn hàng tồn tại
        const orderId = @Model.OrderId;
        
        fetch('/Checkout/CheckOrderStatus/' + orderId)
            .then(response => response.json())
            .then(data => {
                if (!data.exists) {
                    console.error('Order not found in database');
                    // Hiển thị thông báo lỗi
                } else {
                    console.log('Order confirmed:', data);
                }
            });
    </script>
}