@{
    ViewBag.Title = "Gửi liên hệ thành công";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="contact-thankyou-page">
    <div class="contact-bg">
        <div class="floating-shapes">
            <div class="shape shape-1"></div>
            <div class="shape shape-2"></div>
            <div class="shape shape-3"></div>
        </div>
    </div>

    <div class="container">
        <div class="thankyou-container" data-aos="zoom-in">
            <div class="thankyou-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <h1 class="thankyou-title">Cảm ơn bạn!</h1>
            <p class="thankyou-message">@ViewBag.SuccessMessage</p>
            
            <div class="response-time">
                <div class="time-item">
                    <div class="time-icon">
                        <i class="fas fa-phone-alt"></i>
                    </div>
                    <div class="time-info">
                        <h3>Điện thoại</h3>
                        <p>Phản hồi trong vòng 24 giờ</p>
                    </div>
                </div>
                
                <div class="time-item">
                    <div class="time-icon">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <div class="time-info">
                        <h3>Email</h3>
                        <p>Phản hồi trong vòng 48 giờ</p>
                    </div>
                </div>
            </div>
            
            <div class="thankyou-actions">
                <a href="@Url.Action("Index", "Home")" class="btn-action home">
                    <i class="fas fa-home"></i>
                    <span>Trang chủ</span>
                </a>
                
                @if (Session["UserId"] != null)
                {
                    <a href="@Url.Action("History", "Contact")" class="btn-action history">
                        <i class="fas fa-history"></i>
                        <span>Lịch sử liên hệ</span>
                    </a>
                }
                else
                {
                    <a href="@Url.Action("Index", "Products")" class="btn-action shopping">
                        <i class="fas fa-shopping-cart"></i>
                        <span>Mua sắm</span>
                    </a>
                }
            </div>
        </div>
    </div>
</div>

@section styles {
    <link rel="stylesheet" href="~/Content/css/contact-style.css" />
    <link rel="stylesheet" href="https://unpkg.com/aos@2.3.1/dist/aos.css" />
}

@section scripts {
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        $(document).ready(function() {
            AOS.init({
                duration: 800,
                easing: 'ease-out-cubic',
                once: true
            });
            
            // Confetti effect
            const canvas = document.createElement('canvas');
            canvas.className = 'confetti-canvas';
            document.querySelector('.contact-thankyou-page').appendChild(canvas);
            
            const jsConfetti = new JSConfetti({ canvas });
            
            setTimeout(function() {
                jsConfetti.addConfetti({
                    confettiColors: ['#3b82f6', '#10b981', '#fbbf24', '#ef4444', '#8b5cf6']
                });
            }, 500);
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/js-confetti@latest/dist/js-confetti.browser.js"></script>
}