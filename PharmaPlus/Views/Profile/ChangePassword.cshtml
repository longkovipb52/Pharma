@model PharmaPlus.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Đổi mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Response.ContentEncoding = System.Text.Encoding.UTF8;
    Response.Charset = "utf-8";
}

<div class="change-password-container">
    <div class="container">
        <div class="page-header">
            <div class="header-content">
                <h1><i class="fas fa-key"></i> Đổi mật khẩu</h1>
                <p>Thay đổi mật khẩu để bảo mật tài khoản của bạn</p>
            </div>
            <div class="header-actions">
                <a href="@Url.Action("Index")" class="btn btn-outline">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>

        <div class="change-password-form-container">
            @using (Html.BeginForm("ChangePassword", "Profile", FormMethod.Post, new { @class = "change-password-form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                
                <div class="password-section">
                    <div class="security-info">
                        <div class="security-icon">
                            <i class="fas fa-shield-alt"></i>
                        </div>
                        <div class="security-text">
                            <h3>Bảo mật tài khoản</h3>
                            <p>Mật khẩu mạnh giúp bảo vệ tài khoản của bạn khỏi các truy cập trái phép.</p>
                        </div>
                    </div>

                    <div class="password-form">
                        <div class="form-group">
                            @Html.LabelFor(m => m.CurrentPassword, new { @class = "form-label" })
                            <div class="password-input-group">
                                @Html.PasswordFor(m => m.CurrentPassword, new { @class = "form-control", placeholder = "Nhập mật khẩu hiện tại", id = "currentPassword" })
                                <button type="button" class="password-toggle" onclick="togglePassword('currentPassword')">
                                    <i class="fas fa-eye" id="currentPasswordIcon"></i>
                                </button>
                            </div>
                            @Html.ValidationMessageFor(m => m.CurrentPassword, "", new { @class = "field-validation-error" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.NewPassword, new { @class = "form-label" })
                            <div class="password-input-group">
                                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = "Nhập mật khẩu mới", id = "newPassword" })
                                <button type="button" class="password-toggle" onclick="togglePassword('newPassword')">
                                    <i class="fas fa-eye" id="newPasswordIcon"></i>
                                </button>
                            </div>
                            @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "field-validation-error" })
                            <div class="password-strength" id="passwordStrength"></div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label" })
                            <div class="password-input-group">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Xác nhận mật khẩu mới", id = "confirmPassword" })
                                <button type="button" class="password-toggle" onclick="togglePassword('confirmPassword')">
                                    <i class="fas fa-eye" id="confirmPasswordIcon"></i>
                                </button>
                            </div>
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "field-validation-error" })
                        </div>

                        <div class="password-requirements">
                            <h4>Yêu cầu mật khẩu:</h4>
                            <ul>
                                <li id="length-requirement"><i class="fas fa-times"></i> Ít nhất 6 ký tự</li>
                                <li id="uppercase-requirement"><i class="fas fa-times"></i> Có chữ cái viết hoa</li>
                                <li id="lowercase-requirement"><i class="fas fa-times"></i> Có chữ cái viết thường</li>
                                <li id="number-requirement"><i class="fas fa-times"></i> Có số</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary" id="submitBtn" disabled>
                        <i class="fas fa-key"></i> Đổi mật khẩu
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-outline">
                        <i class="fas fa-times"></i> Hủy bỏ
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<link href="~/Content/css/profile-style.css" rel="stylesheet" />
<script src="~/Scripts/js/profile-script.js"></script>